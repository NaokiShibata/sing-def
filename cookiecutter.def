Bootstrap: docker
From: python:3.10-slim-bookworm

%labels
    Author "Your Name <your.email@example.com>"
    Version "1.0.0"
    Description "Singularity container for running Cookiecutter"

%post
    echo "Updating apt packages..."
    apt-get update -y
    apt-get upgrade -y

    echo "Installing build essentials and git..."
    apt-get install -y --no-install-recommends \
        build-essential \
        git \
        curl \
        ca-certificates

    echo "Cleaning up apt cache..."
    apt-get clean
    rm -rf /var/lib/apt/lists/*

    echo "Upgrading pip to the latest version..."
    python3 -m pip install --upgrade pip

    echo "Installing Cookiecutter and its dependencies..."
    pip install --no-cache-dir \
        "MarkupSafe==2.0.1" \
        "Jinja2<3.1.0" \
        cookiecutter==2.1.1 \
        jinja2-slug

%environment
    export PATH="/usr/local/bin:$PATH"
    export PYTHONNOUSERSITE=1

%runscript
    exec "$@"

%help
    This container provides a ready-to-use environment for Cookiecutter.
    To use it, run:
    singularity run cookiecutter.sif cookiecutter <template_url_or_path>
